{
    "session_name": "temp",
    "previous_session": "",

    "networks": {
        "match_type": "dp",
        "dense_match": false,
        "base_net": "super",
        "loss": "steam",
        "steam_pseudo": true,
        "sobel_mask": ["intensity", "vehicle"],
        "sobel_int_thresh": 0.7,
        "sobel_ran_thresh": 0.2,
        "unet": {
            "n_weight_score": 6,
            "bilinear": true,
            "first_feature_dimension": 8,
            "depth": 4
        },
        "keypoint_block": {
            "patch_height": 8,
            "patch_width": 8,
            "softmax_temp": 1.0,
            "grid_sample": false,
            "align_corners": true
        },
        "keypoint_loss": {
            "error_thresh": 4.0
        }
    },

    "optimizer": {
        "type": "Adam",
        "lr": 0.001,
        "weight_decay": 0
    },

    "dataset": {
        "data_dir": "/home/david/Data/kitti",
        "seq": {
            "train": ["00"],
            "val": ["08"],
            "test": ["00"]
        },
        "images": {
            "height": 64,
            "width": 720,
            "input_channel": ["intensity", "range"],
            "preload": true,
            "azi_res": 0.5,
            "azi_min": -180.0,
            "azi_max": 180.0,
            "map_laser_to_row": true,
            "ele_res": 0.5,
            "ele_min": -25.0,
            "ele_max": 3.0
        }
    },

    "train_loader": {
        "batch_size": 3,
        "window_size": 2,
        "num_workers": 0
    },

    "test_loader": {
        "batch_size": 1,
        "window_size": 2,
        "num_workers": 10
    },

    "trainer": {
        "max_epochs": 200,
        "validate": {
            "on": false,
            "patience": 7
        }
    }
}
